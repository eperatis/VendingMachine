<Window x:Class="WpfVendingMachineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVendingMachineApp"
        mc:Ignorable="d"
        Title="VendingMachine" MaxHeight="700" MinHeight="700" MaxWidth="440" MinWidth="440">

    <DockPanel Width="420" Height="410" HorizontalAlignment="Left" VerticalAlignment="Top">
        <StackPanel Width="210" Height="410" Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Top" Margin="5">
            <Grid Width="200" Height="400" Margin="5">
                <ListView Style="{StaticResource ItemsList}">
                </ListView>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>
        <StackPanel Width="210" Height="410" Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Top" Margin="5">
            <Grid Width="200" Height="400" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
